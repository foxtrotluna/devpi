<metal:block use-macro="main_template" tal:define="main_class 'index'">
    <metal:title fill-slot="title">devpi - ${title}</metal:title>
    <metal:content fill-slot="content">
        <div class="content_header">
            <metal:macros tal:repeat="name request.registry['macros'].get_group('index_header')" use-macro="macros[name]" />
        </div>
        <div class="content">
            <metal:macros tal:repeat="name request.registry['macros'].get_group('index')" use-macro="macros[name]" />
        </div>
    </metal:content>
</metal:block>
